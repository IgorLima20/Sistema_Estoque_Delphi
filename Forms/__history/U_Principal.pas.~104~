procedure TFrm_Principal.FormShow(Sender: TObject);
begin
  if DM.tipo_Usuario = 'APOIO' then
  begin
    bt_empresa.Enabled := false;
    bt_usuario.Enabled := false;
    Empresa1.Enabled := false;
    Usurio1.Enabled := false;
    ListaUsurios1.Enabled := false;
  end;

end;

