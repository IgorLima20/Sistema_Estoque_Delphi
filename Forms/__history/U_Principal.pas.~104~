procedure TFrm_Principal.Abre_Pesq_Venda;
begin
  Frm_Pesq_Venda := TFrm_Pesq_Venda.Create(Self);
  Frm_Pesq_Venda.ShowModal;
  try
    if Frm_Pesq_Venda.codigo > 0 then
    begin
    end;
  finally
    Frm_Pesq_Venda.Free;
    Frm_Pesq_Venda := nil;
  end;
end;

