procedure TFrm_Principal.SpeedButton10Click(Sender: TObject);
begin
  if MessageDlg('Deseja sair do sistema?', mtConfirmation, [mbYes, mbCancel], 0) = mrYes then
  begin
    Application.Terminate;
  end
  else
    Abort;
end;

